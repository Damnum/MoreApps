<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="fill_parent" android:gravity="center">

	<ImageView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/imageView" android:layout_marginBottom="2.5dp"
			android:layout_weight="1" android:adjustViewBounds="true"
			android:cropToPadding="false" android:padding="2.5dp"
			android:src="@drawable/content_picture" android:scaleType="center"
			android:contentDescription="@string/showcased_application_icon"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/showcased_application_name"
			android:id="@+id/textView"
			android:layout_marginTop="2.5dp" android:gravity="center"
			android:padding="2.5dp" android:textStyle="bold"
			android:typeface="monospace"/>

</LinearLayout>