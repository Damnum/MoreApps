<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="fill_parent"
			  android:layout_height="110dp" android:gravity="center"
			  android:layout_margin="2.5dp">

	<ImageView
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:id="@+id/mal_imageView"
			android:layout_weight="1" android:adjustViewBounds="true"
			android:cropToPadding="false" android:padding="2.5dp"
			android:src="@drawable/mal_showcased_application_icon_sample"
			android:scaleType="center"
			android:contentDescription="@string/mal_showcased_application_icon"/>
	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/mal_showcased_application_name"
			android:id="@+id/mal_textView"
			android:gravity="center"
			android:textStyle="bold"
			android:typeface="monospace"/>

</LinearLayout>